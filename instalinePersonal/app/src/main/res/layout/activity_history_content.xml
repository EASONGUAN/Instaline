<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.instaline.HistoryContentActivity"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="248dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="216dp">
            <ImageView
                android:id="@+id/res_coverImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/kinton"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="96dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="146dp"
            android:background="@android:color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@android:color/white">
                <TextView
                    android:id="@+id/res_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kinton Ramen"
                    android:textAlignment="center"
                    android:textSize="32sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="normal"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:weightSum="3">
                    <TextView
                        android:id="@+id/res_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Japanese"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryDark"
                        />
                    <TextView
                        android:id="@+id/res_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$$"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:textStyle="normal"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryDark"
                        />
                    <TextView
                        android:id="@+id/res_waitTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="30min"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textStyle="normal"
                        android:textColor="@color/colorPrimaryDark"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/restaurantMap"
        android:layout_width="match_parent"
        android:layout_height="160dp">
    </RelativeLayout>

    <TextView
        android:id="@+id/res_queueNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="15"
        android:textSize="56sp"
        android:textAlignment="center"
        android:textStyle="normal"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:id="@+id/res_timeStamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comfirm restaurant with number: 17"
        android:textSize="12sp"
        android:textAlignment="center"
        android:textStyle="normal"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:id="@+id/quitline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/deepred_lineup_button_style"
        android:gravity="center"
        android:text="InstaQuit"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

</LinearLayout>
