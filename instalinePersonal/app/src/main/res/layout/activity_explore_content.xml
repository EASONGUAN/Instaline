<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.instaline.ExploreContentActivity"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="405dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp">
            <ImageView
                android:id="@+id/res_coverImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/kinton"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="96dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:background="@android:color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@android:color/white">
                <TextView
                    android:id="@+id/res_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kinton Ramen"
                    android:textAlignment="center"
                    android:textSize="32sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="normal"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:weightSum="3">
                    <TextView
                        android:id="@+id/res_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Japanese"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/res_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$$"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:textStyle="normal"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/res_waitTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="30min"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="normal"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/k1"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/k2"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/k4"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/k5"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/k3"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/k8"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/k7"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/k6"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

    <TextView
        android:id="@+id/res_queueNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="15"
        android:textSize="64sp"
        android:textAlignment="center"
        android:textStyle="normal"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorPrimaryDark"
        />
    <Button
        android:id="@+id/lineup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_lineup_button_style"
        android:textAllCaps="false"
        android:text="Instaline"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        />


</LinearLayout>
